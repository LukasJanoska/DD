<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.account.profile.ui.ProfileFragment">

    <data>
        <variable name="vm" type="com.damidev.dd.main.account.profile.ui.ProfileViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="100dp"
            android:src="@drawable/contact"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            style="@style/profile_layout">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textSize="17sp"
                android:layout_marginRight="15dp"
                android:text="Name: "/>
            <TextView
                android:id="@+id/profileNameTv"
                style="@style/profile_attrss"
                android:text="@={vm.name}"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            style="@style/profile_layout"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Surname: "/>
            <TextView
                android:id="@+id/profileSurNameTv"
                style="@style/profile_attrss"
                android:text="@={vm.surName}"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            style="@style/profile_layout"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Email: "/>
            <TextView
                android:id="@+id/profileEmail"
                style="@style/profile_attrss"
                android:inputType="textEmailAddress"
                android:text="@={vm.email}"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            style="@style/profile_layout"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Phone: "/>
            <TextView
                android:id="@+id/profilePhone"
                style="@style/profile_attrss"
                android:inputType="number"
                android:text="@={vm.phone}" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            style="@style/profile_layout"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Description: "/>
            <TextView
                android:id="@+id/profileDescription"
                style="@style/profile_attrss"
                android:text="@={vm.descr}"
                />
        </RelativeLayout>

    </LinearLayout>
</layout>